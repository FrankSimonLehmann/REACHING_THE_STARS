<div class="container">
<h1>This is a star page <%= @star.name %></h1>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<%= link_to "Book the star", new_star_booking_path(@star.id) %>

</div>




<div class="container">

<div class="row justify-content-center">
    <div class="col-12 col-lg-9">



      <div class="card-product">
       <img src="<%= @star.img%>" alt="image of the star">
        <div class="card-product-infos">
          <h2><%= star.name%></h2>
          <p>star description with <strong>relevant info</strong> only.</p>
        </div>
        <div class="card-button">
          <a class="btn btn-success" href="#">Rent</a>
          <a class="btn btn-success" href="#">Review</a>
        </div>
      </div>


</div>
  </div>


</div>








