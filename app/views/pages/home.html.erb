<div class="container">
<p>All the stars below!</p>

<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: stars_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<% @stars.each do |star| %>
<div class = "card">
<p>The star name is <%= star.name%></p>
</div>
  <%= link_to "See star details", star_path(star) %>
  <% if star.photo.attached? %>
    <%= cl_image_tag(star.photo.key, width: 400, height: 300, crop: :fill) %>
  <% else %>
    <p>no image</p>
  <% end %>
<% end %>
<div>
<%= link_to "my bookings", mybookings_path%>
</div>
<div>
<%= link_to "my owned stars", ownedstars_path%>
</div>
